@model List<movieApp.Models.Movie>

@{
    ViewData["Title"] = "Movie App Home";
}

<style>
    body {
        background-color: #111;         /* Dark background */
        color: #f0f0f0;                 /* Light text */
        font-family: 'Segoe UI', sans-serif;
        padding: 2rem;
        margin: 0;
    }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
    }

    .button-container {
        text-align: center;
        margin-top: 2rem;
    }

    .link-button {
        display: inline-block;
        background-color: #444;
        color: #fff;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-size: 16px;
        margin: 0.5rem;
        transition: background-color 0.2s ease-in-out;
    }

    .link-button:hover {
        background-color: #666;
    }

    .gif-container {
        text-align: center;
        margin-bottom: 2rem;
    }
</style>

<h1>Home of Movies</h1>

<div class="gif-container">
    <img src="/MovieNight.gif" alt="Pixel art" width="600" />
</div>

<div class="button-container">
    <a href="@Url.Action("MovieList", "Movie")" class="link-button">Show Me All Movies</a>
    <a href="@Url.Action("Create", "Movie")" class="link-button">Add a New Movie</a>
    <a href="@Url.Action("Random", "Movie")" class="link-button">Pick a Random Movie</a>
</div>
